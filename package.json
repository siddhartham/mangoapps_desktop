{
  "name": "MangoApps",
  "version": "2.0.1",
  "description": "A Cross Platform MangoApps Client",
  "license": "MIT",
  "keywords": [
    "MangoApps"
  ],
  "author": {
    "name": "Siddhartha Mukherjee",
    "email": "mukherjee.siddhartha@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/siddhartham/mangoapps.git"
  },
  "bugs": {
    "url": "https://github.com/siddhartham/mangoapps/issues"
  },
  "main": "dist/main.js",
  "build": {
    "asar": true,
    "copyright": "Copyright Â© 2017 Siddhartha Mukherjee <mukherjee.siddhartha@gmail.com>",
    "directories": {
      "buildResources": "build",
      "output": "downloads"
    },
    "files": [
      "**/*",
      "build/icon.*",
      "dist/*",
      "dist/**/*"
    ],
    "appId": "github.siddhartham.mangoapps",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "category": "Network",
      "packageCategory": "GNOME;GTK;Network;InstantMessaging",
      "description": "MangoApps Desktop Client for Linux",
      "target": [
        "deb"
      ],
      "maintainer": "Siddhartha Mukherjee <mukherjee.siddhartha@gmail.com>"
    },
    "deb": {
      "synopsis": "MangoApps"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publisherName": "Siddhartha Mukherjee"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 122,
          "y": 240,
          "type": "file"
        }
      ]
    }
  },
  "scripts": {
    "build-electron": "ng build --base-href . && cp src/electron/* dist",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run build-electron && electron dist",
    "pack": "npm run build-electron && electron-builder --dir",
    "dist:linux": "npm run build-electron && electron-builder --linux deb",
    "dist:mac": "npm run build-electron && electron-builder --mac dmg",
    "dist:win": "npm run build-electron && electron-builder --win nsis --ia32 --x64"
  },
  "dependencies": {
    "@angular/animations": "^4.3.2",
    "@angular/cdk": "^2.0.0-beta.8",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/material": "^2.0.0-beta.8",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/socket.io-client": "^1.4.29",
    "angular2-websocket": "^0.9.3",
    "core-js": "^2.4.1",
    "dotenv": "^4.0.0",
    "electron-localshortcut": "^2.0.2",
    "electron-positioner": "^3.0.0",
    "electron-window-state": "^4.1.1",
    "hammerjs": "^2.0.8",
    "material-design-icons": "^3.0.1",
    "ngx-electron": "^1.0.3",
    "rxjs": "^5.1.0",
    "xml2js": "^0.4.17",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.2.1",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.0.1",
    "electron": "^1.6.11",
    "electron-builder": "^19.22.1",
    "electron-packager": "^8.7.2",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  }
}
